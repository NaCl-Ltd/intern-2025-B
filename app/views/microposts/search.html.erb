<h1>検索🔍</h1>
<%= form_with url: search_path, method: :get, local: true do %>
  <%= text_field_tag :q, params[:q], placeholder: "検索ワードを入力", style: "font-size: 1.5em; padding: 0.5em;" %>
  <%= hidden_field_tag :type, params[:type] || "microposts" %>
  <%= submit_tag "検索", style: "font-size: 1.5em; padding: 5px;" %>
<% end %>

<div style="margin: 10px 0;">
  <%= link_to "投稿", search_path(q: params[:q], type: "microposts"), class: "inline btn btn-primary", style: "font-size: 1.5em; width: 200px;" %>
  <%= link_to "ユーザ", search_path(q: params[:q], type: "users"), class: "inline btn btn-primary", style: "font-size: 1.5em; width: 200px;" %>
</div>

<% if params[:type] == "users" %>
  <h1>ユーザ</h1>
  <% if @users.any? %>
    <ul class="users">
      <%= render @users %>
    </ul>
  <% else %>
    <p>該当なし</p>
  <% end %>
<% else %>
  <h1>投稿</h1>
  <% if @microposts.any? %>
    <ol class="microposts">
      <%= render @microposts %>
    </ol>
  <% else %>
    <p>該当なし</p>
  <% end %>
<% end %>