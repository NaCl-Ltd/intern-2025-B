<li id="micropost-<%= micropost.id %>" class="post-container">
  <% if micropost.user.image.attached? %>
    <%= link_to image_tag(micropost.user.image, size: 50, class: "user-avatar") %>
  <% else %>
    <%= link_to gravatar_for(micropost.user, size: 50, class: "user-avatar"), micropost.user %>
  <% end %>

  <div class="post-content">
    <div class="post-header">
      <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
      <div class="post-meta">
        <%= time_ago_in_words(micropost.created_at) %>前
        <% if current_user?(micropost.user) %>
          <%= link_to "削除", micropost, data: { "turbo-method": :delete, turbo_confirm: "本当に削除しますか?" } %>
          <%= link_to "固定", fixation_micropost_path(micropost), method: :get %>
        <% end %>
      </div>
    </div>

    <div class="content">
      <%= micropost.content %>
    </div>

    <% if micropost.image.attached? %>
      <div class="post-image">
        <%= image_tag micropost.image.variant(:display) %>
      </div>
    <% end %>
  </div>
</li>
