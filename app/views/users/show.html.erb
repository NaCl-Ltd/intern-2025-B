<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section>
      <h1>
      <% if @user.image.attached? %>
        <%= image_tag(@user.image, size: 50) %>
      <% else %>
        <%= gravatar_for(@user, size: 50) %>
      <% end %>
        <%= @user.name %>
      </h1>
    </section>
    <%= @user.introduction %>
    <section class="stats">
      <%= render 'shared/stats', user: @user %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <% if @user.fixed_post %>
          <% fixed_post = Micropost.find_by(id: @user.fixed_post) %>
          <%= render fixed_post %>
        <% end %>
      </ol>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
